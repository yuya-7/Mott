= render 'layouts/notifications'
= render 'posts/header'
.user
  新規登録
  = form_for(@user, url: user_registration_path) do |f|
    = render partial: "erroruser", locals: { user: @user }
    .user_field
      = f.label :ニックネーム, class: "user_field_label"
      %br/
      = f.text_field :nickname, autofocus: true, placeholder: :必須, class: "user_field_form"
    .user_field
      = f.label :メールアドレス, class: "user_field_label"
      %br/
      = f.email_field :email, autofocus: true, placeholder: :必須, autocomplete: "email", class: "user_field_form"
    .user_field
      = f.label :パスワード, class: "user_field_label"
      - if @minimum_password_length
        %em
          (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, placeholder: "8文字以上の半角英数字（必須）", autocomplete: "new-password", class: "user_field_form"
    .user_field
      = f.label :パスワード（確認）, class: "user_field_label"
      %br/
      = f.password_field :password_confirmation, placeholder: "8文字以上の半角英数字（必須）", autocomplete: "new-password", class: "user_field_form"
    .user_field
      = f.label :名前（全角）, class: "user_field_label"
      %br/
      = f.text_field :last_name, placeholder: "例) 山田", class: "user_field_form_name"
      = f.text_field :first_name, placeholder: "例) 太郎", class: "user_field_form_name"
    .user_field
      = f.label :名前かな（全角）, class: "user_field_label"
      %br/
      = f.text_field :last_name_kana, placeholder: "例）やまだ", class: "user_field_form_name"
      = f.text_field :first_name_kana, placeholder: "例）たろう", class: "user_field_form_name"
    .user_field
      = f.label :生年月日, class: "user_field_label"
      %br/
      != sprintf(f.date_select(:date_of_birth, prefix:'birthday', with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
    .user_field
      = f.label :自己紹介, class: "user_field_label"
      %br/
      = f.text_area :biography, placeholder: "こちらは任意です", class: "user_field_form"
    .user_field
      = f.label :プロフィール画像（任意）, class: "user_field_label"
      %br/
      = f.file_field :avatar_image, class: "user_field_file"
    .user_text
      *こちらの情報は正しく入力してください。
      %br/
      会員登録後、修正にはお時間をいただくことがあります。
    .actions
      = f.submit "登録", class: "user_field_btn"
= render 'posts/footer'
